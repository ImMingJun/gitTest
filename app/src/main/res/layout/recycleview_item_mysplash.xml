<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/recyclerview_item_myslash_tv_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/recyclerview_item_myslash_tv_quname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:layout_toRightOf="@+id/recyclerview_item_myslash_tv_cityname"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/recyclerview_item_myslash_tv_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/recyclerview_item_myslash_tv_statedetailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/recyclerview_item_myslash_tv_cityname" />

        <TextView
            android:id="@+id/recyclerview_item_myslash_tv_windstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recyclerview_item_myslash_tv_tem" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

